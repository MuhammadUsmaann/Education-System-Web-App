<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content="Xenon Boostrap Admin Panel" />
	<meta name="author" content="" />
	
	<title>Education System</title>

	<!-- <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Arimo:400,700,400italic"> -->
	<link rel="stylesheet" href="~/Content/fonts/linecons/css/linecons.css">
	<link rel="stylesheet" href="~/Content/fonts/fontawesome/css/font-awesome.min.css">
	<link rel="stylesheet" href="~/Content/bootstrap.css">
	<link rel="stylesheet" href="~/Content/xenon-core.css">
	<link rel="stylesheet" href="~/Content/xenon-forms.css">
	<link rel="stylesheet" href="~/Content/xenon-components.css">
	<link rel="stylesheet" href="~/Content/xenon-skins.css">
	<link rel="stylesheet" href="~/Content/custom.css">

	<script src="~/Scripts/jquery-1.11.1.min.js"></script>

	<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
	
	
</head>
<body class="page-body">
	<div class="settings-pane">
		<a href="#" data-toggle="settings-pane" data-animate="true">
			&times;
		</a>
		<div class="settings-pane-inner">
			<div class="row">
				<div class="col-md-4">
					<div class="user-info">
						<div class="user-image">
							<a href="extra-profile.html">
								<img src="~/Images/user-2.png" class="img-responsive img-circle" />
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<div class="page-container"><!-- add class "sidebar-collapsed" to close sidebar by default, "chat-visible" to make chat appear always -->
			
		<!-- Add "fixed" class to make the sidebar fixed always to the browser viewport. -->
		<!-- Adding class "toggle-others" will keep only one menu item open at a time. -->
		<!-- Adding class "collapsed" collapse sidebar root elements and show only icons. -->
		
        @Html.Partial("SideBar",null)
		
		<div class="main-content">
					
			<!-- User Info, Notifications and Menu Bar -->
			@Html.Partial("Header",null)

            <!-- Main Content  -->

            @RenderBody()

			<!-- Main Footer -->
			@Html.Partial("Footer", null)

		</div>
	</div>
	
    @RenderSection("scripts", required: false)

    <!--Modal Setting are here because according to the theme css modal must be out side the mian page :'(   -->
    @{
        if (ViewBag.ModalName != null && ViewBag.ModalName == "school")
        {
            Html.RenderPartial("~/Views/School/_school.cshtml");
        }
        else if (ViewBag.ModalName != null && ViewBag.ModalName == "parent")
        {
            Html.RenderPartial("~/Views/Parent/_parent.cshtml");
        }
        else if (ViewBag.ModalName != null && ViewBag.ModalName == "teacher")
        {
            Html.RenderPartial("~/Views/Teacher/_teacher.cshtml");
        }
        else if (ViewBag.ModalName != null && ViewBag.ModalName == "class")
        {
            Html.RenderPartial("~/Views/Class/_class.cshtml");
        }
        else if (ViewBag.ModalName != null && ViewBag.ModalName == "subject")
        {
            Html.RenderPartial("~/Views/Subject/_subject.cshtml");
        }
        else if (ViewBag.ModalName != null && ViewBag.ModalName == "exam")
        {
            Html.RenderPartial("~/Views/Exam/_exam.cshtml");
        }
        else if (ViewBag.ModalName != null && ViewBag.ModalName == "viewStudent")
        {
            Html.RenderPartial("~/Views/Attendance/_Edit.cshtml");
        }
        else if (ViewBag.ModalName != null && ViewBag.ModalName == "fee")
        {
            Html.RenderPartial("~/Views/Fee/_Fee.cshtml");
        }
    }

    <script src="~/Scripts/datatables/js/jquery.dataTables.min.js"></script>
    <!-- Imported scripts on this page -->
    <script src="~/Scripts/datatables/dataTables.bootstrap.js"></script>
    <!-- Bottom Scripts -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/TweenMax.min.js"></script>
    <script src="~/Scripts/resizeable.js"></script>
    <script src="~/Scripts/joinable.js"></script>
    <script src="~/Scripts/xenon-api.js"></script>
    <script src="~/Scripts/xenon-toggles.js"></script>

    <!-- JavaScripts initializations and stuff -->
    <script src="~/Scripts/xenon-custom.js"></script>
    <script src="~/Scripts/Custom/common.js"></script>

    @RenderSection("modals", required: false);


  

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</body>
</html>