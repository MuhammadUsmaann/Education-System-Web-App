@model EducationSystem.Models.Entities.Users_detail
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Profile</h2>
<div class="row">
    <div class="col-sm-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Update Profile</h3>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("UpdateProfile", "Setting", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                   
                    <div class="col-sm-8 col-sm-offset-4" style="color:red">
                        @Html.ValidationMessage("message")

                    </div>

                    @*<form id="student_admission_form" role="form" class="form-horizontal validate">*@
                    <div class="form-group">
                        @Html.LabelFor(p => p.first_name, new { @class = "col-sm-4 control-label" })
                        @Html.HiddenFor(p=>p.user_id)
                        <div class="col-sm-5 ">
                            @Html.TextBoxFor(p => p.first_name, new { @class = "form-control" })
                            @* <input type="text" class="form-control" name="student_fname" id="student_fname" placeholder="First name">*@
                        </div>
                        <br />
                        <div class="col-sm-8 col-sm-offset-4" style="color:red">
                            @Html.ValidationMessageFor(p => p.first_name)

                        </div>
                    </div>
                    <div class="form-group-separator"></div>
                    
                     <div class="form-group">
                        @Html.LabelFor(p => p.middle_name, new { @class = "col-sm-4 control-label" })

                        <div class="col-sm-5 ">
                            @Html.TextBoxFor(p => p.middle_name, new { @class = "form-control" })
                            @* <input type="text" class="form-control" name="student_fname" id="student_fname" placeholder="First name">*@
                        </div>
                        <br />
                        <div class="col-sm-8 col-sm-offset-4" style="color:red">
                            @Html.ValidationMessageFor(p => p.middle_name)

                        </div>
                    </div>
                    <div class="form-group-separator"></div>
                    
                    <div class="form-group">
                        @Html.LabelFor(p => p.last_name, new { @class = "col-sm-4 control-label" })

                        <div class="col-sm-5 ">
                            @Html.TextBoxFor(p => p.last_name, new { @class = "form-control" })
                            @* <input type="text" class="form-control" name="student_fname" id="student_fname" placeholder="First name">*@
                        </div>
                        <br />
                        <div class="col-sm-8 col-sm-offset-4" style="color:red">
                            @Html.ValidationMessageFor(p => p.last_name)

                        </div>
                    </div>
                    <div class="form-group-separator"></div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.phone, new { @class = "col-sm-4 control-label" })

                        <div class="col-sm-5 ">
                            @Html.TextBoxFor(p => p.phone, new { @class = "form-control" })
                            @* <input type="text" class="form-control" name="student_fname" id="student_fname" placeholder="First name">*@
                        </div>
                        <br />
                        <div class="col-sm-8 col-sm-offset-4" style="color:red">
                            @Html.ValidationMessageFor(p => p.phone)

                        </div>
                    </div>
                    <div class="form-group-separator"></div>
                     
                    <div class="form-group">
                        @Html.LabelFor(p => p.profession, new { @class = "col-sm-4 control-label" })

                        <div class="col-sm-5 ">
                            @Html.TextBoxFor(p => p.profession, new { @class = "form-control" })
                            @* <input type="text" class="form-control" name="student_fname" id="student_fname" placeholder="First name">*@
                        </div>
                        <br />
                        <div class="col-sm-8 col-sm-offset-4" style="color:red">
                            @Html.ValidationMessageFor(p => p.profession)

                        </div>
                    </div>
                    <div class="form-group-separator"></div>

                    
                     <div class="form-group">
                        @Html.LabelFor(p => p.address, new { @class = "col-sm-4 control-label" })

                        <div class="col-sm-5 ">
                            @Html.TextAreaFor(p => p.address, new { @class = "form-control" })
                            @* <input type="text" class="form-control" name="student_fname" id="student_fname" placeholder="First name">*@
                        </div>
                        <br />
                        <div class="col-sm-8 col-sm-offset-4" style="color:red">
                            @Html.ValidationMessageFor(p => p.address)

                        </div>
                    </div>
                    <div class="form-group-separator"></div>
                    
                     <div class="form-group">
                        @Html.LabelFor(p => p.other_detail, new { @class = "col-sm-4 control-label" })

                        <div class="col-sm-5 ">
                            @Html.TextAreaFor(p => p.other_detail, new { @class = "form-control" })
                            @* <input type="text" class="form-control" name="student_fname" id="student_fname" placeholder="First name">*@
                        </div>
                        <br />
                        <div class="col-sm-8 col-sm-offset-4" style="color:red">
                            @Html.ValidationMessageFor(p => p.other_detail)

                        </div>
                    </div>
                    <div class="form-group-separator"></div>
                    
                    <div class="form-group">
                        @Html.LabelFor(p => p.image, new { @class = "col-sm-4 control-label" })

                        <div class="col-sm-5 ">
                           <input type="file" name="image" id="image" />
                            @* <input type="text" class="form-control" name="student_fname" id="student_fname" placeholder="First name">*@
                        </div>
                        <br />
                        <div class="col-sm-8 col-sm-offset-4" style="color:red">
                            @Html.ValidationMessageFor(p => p.image)
                        </div>
                    </div>
                    <div class="form-group-separator"></div>

                    <div class="col-sm-8 col-sm-offset-4">
                        <input type="submit" class="btn btn-success btn-icon" id="submit-form" value="Update Profile" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
