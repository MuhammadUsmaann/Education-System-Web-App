

<div class="modal fade" id="date-detail-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@Html.DisplayFor(m =>Session[EducationSystem.Models.Configuration.SESSION_USER_SCHOOL_NAME])'s Session Detail</h4>
            </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Start Date</label>
                                <input type="text" class="form-control datepickerMonth" required name="start" id="start_date" placeholder="Start Date">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Start Date</label>
                                <input type="text" class="form-control datepickerMonth" required name="end" id="end_date" placeholder="End Date">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-info" id="save-changes-id">Save changes</button>
                </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function () {
        $("#session-modal-btn").click(function () {
            jQuery('#date-detail-modal').modal('show', { backdrop: 'static' });
        });
        $('#class-detail-modal').on('hidden.bs.modal', function () {
            $('#end_date').val("");
            $('#start_date').val("");
        });

        $("#save-changes-id").click(function () {
            var action = $("#action-type").val();

            var data = {
                start: $('#start_date').val(),
                end: $('#end_date').val(),
            };

            var url = "/session/Add";

            ajaxCall(url, data, function (response) {
                if (response) {
                    window.location.href = '/session';
                }
            });
        });
        
    });
</script>


