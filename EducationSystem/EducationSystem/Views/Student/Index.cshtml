@model IEnumerable<EducationSystem.Models.Entities.Student>
@{
    ViewBag.ModalName = "no";
}
<div class="page-title">
	<div class="title-env">
		<h1 class="title">Students</h1>
		<p class="description">Student details</p>
	</div>
</div>
<div class="panel panel-default">
	<div class="panel-heading">
        <div class="row">
            <div class="col-sm-8">
                <h3 class="panel-title">Student list</h3>
            </div>
            <div class="col-sm-4">
                <a href="/student/add" class="btn ">Add Student</a>
                <a href="javascript:;" id="tn" class="btn">Delete</a>
            </div>
        </div>
	</div>
	<div class="panel-body">
        <table id="table-format-default" class="table table-bordered">
            <thead>
                <tr>
                    <th><input type="checkbox" class="cbr" /></th>
                    <th>#</th>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Class</th>
                    <th>Parent</th>
                    <th>CNIC</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var count = 1;
                }
                @foreach (var std in Model)
                {
                    <tr>
                        <td><input type="checkbox" class="cbr" /></td>
                        <td>@count</td>
                        <td>@Html.ActionLink(std.full_name, "/view", new { id = std.user_id })</td>
                        <td>@std.username</td>
                        <td>@std.class_name</td>
                        <td>@std.parent_name</td>
                        <td>@std.address</td>
                        <td>@Html.ActionLink("Edit", "/edit", new { id = std.user_id })</td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
	</div>
</div>
